<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.runtrack">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/run_track"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity
            android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".NewRun"
            android:label="@string/add_run"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".RunRoulette"
            android:label="@string/run_roulette"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".AllRuns"
            android:label="@string/all_runs"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".EditRun"
            android:label="@string/edit_run"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".ShowRun"
            android:label="@string/show_run"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".RandomRun"
            android:label="@string/up_for_it"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".Excuses"
            android:label="@string/excuses"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>