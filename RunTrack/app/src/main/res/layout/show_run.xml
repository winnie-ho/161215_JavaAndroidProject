<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/show_run_title"
            android:text="@string/show_run"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="310dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/show_run_date"
            android:text="DATE: "
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:clickable="true"
        android:background="@drawable/graph"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:id="@+id/run_data">

        <TextView
            android:id="@+id/show_run_distance"
            android:layout_alignParentLeft="true"
            android:text="DISTANCE: "
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/show_run_time"
            android:layout_toRightOf="@id/show_run_distance"
            android:text="TIME: "
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/show_run_pace"
            android:layout_toRightOf="@id/show_run_time"
            android:text="PACE: "
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center" />
        </RelativeLayout>

    <TextView
        android:id="@+id/show_run_type"
        android:text="TYPE: "
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="3dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/show_run_comment"
        android:text="COMMENT: "
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="233dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal|right"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/button_editRun"
            android:text="@string/edit_run"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/button"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:layout_gravity="right"/>

        <Button
            android:id="@+id/button_deleteRun"
            android:text="@string/delete_run"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/button"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:layout_gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp">
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/home_button"
            android:src="@drawable/icon_home"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/addrun_button"
            android:src="@drawable/icon_addrun"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/challenges"
            android:src="@drawable/icon_runrandom"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>


        <ImageView
            android:id="@+id/all_runs"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_runlog"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>