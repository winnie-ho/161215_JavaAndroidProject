<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorOpposite"
    android:fontFamily="sans-serif-condensed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL RUNS"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:src="@drawable/run_track_only"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="top" />

    <ListView
        android:id="@+id/run_list"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <!--<Button-->
        <!--android:id="@+id/button_newRun"-->
        <!--android:text="@string/new_run"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->

    <EditText
        android:id="@+id/run_title"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:hint="title"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp" />


    <EditText
        android:id="@+id/distance"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:hint="distance"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/button_add_run"
        android:text="@string/add_run"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp" />


</LinearLayout>