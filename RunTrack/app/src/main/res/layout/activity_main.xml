<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ImageView
        android:src="@drawable/run_track_only"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_gravity="top" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/summary"
        android:textSize="15dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/progress_message"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/progress_message"
        android:textSize="40dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/total_runs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/total_runs"
        android:textSize="15dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/total_distance"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/total_distance"
        android:textSize="15dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />



    <TextView
        android:id="@+id/total_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:text="@string/total_time"
        android:textSize="15dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/all_runs"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:text="@string/all_runs"
        android:textSize="30dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/run_roulette"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/run_roulette"
        android:textSize="30dp"
        android:textColor="@color/colorOpposite"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal" />


</LinearLayout>