    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
    </LinearLayout>

    <TextView
        android:id="@+id/totals"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/totals"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_vertical" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_runs"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginLeft="4dp"
            android:text="@string/total_runs"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/total_normal_runs"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="@string/total_normal_runs"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/total_challenges"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginRight="4dp"
            android:text="@string/totals_challenges"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_distance"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="DISTANCE"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginRight="4dp"
            android:text="@string/total_time"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/total_pace"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginRight="4dp"
            android:text="@string/total_pace"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
    </LinearLayout>

    <TextView
        android:id="@+id/points_score"
        android:text="CHALLENGE TOTALS"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical" />



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <TextView
                android:id="@+id/played"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="4dp"
                android:text="@string/challenges_played"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/complete"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:text="@string/challenges_complete"
                android:layout_gravity="center_horizontal"
                android:padding="5dp" />

            <TextView
                android:id="@+id/failed"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginRight="4dp"
                android:text="@string/challenges_failed"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:padding="5dp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp">
    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/home_button"
                android:src="@drawable/icon_home"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/addrun_button"
                android:src="@drawable/icon_addrun"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/challenges"
                android:src="@drawable/icon_runrandom"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>


            <ImageView
                android:id="@+id/all_runs"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_runlog"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>
        </LinearLayout>
</LinearLayout>