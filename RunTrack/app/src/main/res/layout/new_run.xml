<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <EditText
        android:id="@+id/run_title"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:hint="Title"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/run_day"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="DD"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/run_month"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="MM"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/run_year"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="YYYY"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/distance"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp"
        android:hint="Distance (km)"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/timeHours"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="HH"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/timeMins"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="MM"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/timeSecs"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:hint="SS"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp" />

        </LinearLayout>

    <EditText
        android:id="@+id/type"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp"
        android:hint="Type"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/comment"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:hint="Comment"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="90dp" />

    <Button
        android:id="@+id/button_add_run"
        android:text="@string/add_run"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp">
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/home_button"
            android:src="@drawable/icon_home"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/addrun_button"
            android:src="@drawable/icon_addrun"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/challenges"
            android:src="@drawable/icon_runrandom"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>


        <ImageView
            android:id="@+id/all_runs"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_runlog"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>