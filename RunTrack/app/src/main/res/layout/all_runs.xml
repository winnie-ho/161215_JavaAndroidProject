<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:fillViewport="true">


    <LinearLayout
    android:orientation="vertical"
    android:background="@color/colorOpposite"
    android:fontFamily="sans-serif-condensed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="ALL RUNS"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="20dp"-->
        <!--android:fontFamily="sans-serif-condensed"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:layout_gravity="center_horizontal" />-->

    <ImageView
        android:src="@drawable/run_track_only"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_gravity="top" />

    <Button
        android:id="@+id/button_newRun"
        android:text="@string/add_run"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="right"
        android:textIsSelectable="true"/>

    <ListView
        android:id="@+id/run_list"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:background="@color/colorOpposite"/>

    <Button
        android:id="@+id/button_view_run"
        android:text="@string/view_run"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>