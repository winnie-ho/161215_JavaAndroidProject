<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/points"
            android:text="CHALLENGE POINTS: "
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/points_score"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/challenge_select"
        android:text="@string/challenge_select_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/type_short"
            android:text="@string/type_short"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="191dp"
            android:layout_height="191dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/type_long"
            android:text="@string/type_long"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="191dp"
            android:layout_height="191dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/type_intervals"
            android:text="@string/type_intervals"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="191dp"
            android:layout_height="191dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/type_hills"
            android:text="@string/type_hills"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="191dp"
            android:layout_height="191dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>